[default]
;---------------------------------------------------------------------
;■バージョン
;---------------------------------------------------------------------
product_version = 2.0.6

;---------------------------------------------------------------------
;■システム名称
;---------------------------------------------------------------------
product_name = MP Form Mail CGI eCommerce版

;---------------------------------------------------------------------
;■著作権表示フラグ
;---------------------------------------------------------------------
copyright_flag = 1
copyright_caption = futomi's CGI Cafe
product_author_url = http://www.futomi.com/

;---------------------------------------------------------------------
;■お知らせURL
;---------------------------------------------------------------------
product_info_url = http://www.futomi.com/pinfo/info.html?mpmailec.2.0.6

;---------------------------------------------------------------------
;以下、システム設定のデフォルト値
;---------------------------------------------------------------------

;---------------------------------------------------------------------
;■staticディレクトリのURL
;最後にスラッシュを入れないで下さい。
;---------------------------------------------------------------------
static_url = ./static

;---------------------------------------------------------------------
;■ログオンセッション有効期間
;管理メニューへの最後のアクセスから、ここで指定した時間を経過するとロ
;グオフした状態となります。
;1～999時間の間で指定してください。少数を指定することはできません。
;---------------------------------------------------------------------
session_expire = 1

;---------------------------------------------------------------------
;■SMTPポート番号
;---------------------------------------------------------------------
smtp_port = 25

;---------------------------------------------------------------------
;■SMTPタイムアウト（秒）
;---------------------------------------------------------------------
smtp_timeout = 30

;---------------------------------------------------------------------
;■タイムゾーン
;---------------------------------------------------------------------
tz = +0900

;---------------------------------------------------------------------
;■A8FLYリクエストURL
;---------------------------------------------------------------------
a8f_url = https://px.a8.net/cgi-bin/a8fly/sales

;---------------------------------------------------------------------
;■ログ出力フラグ
;---------------------------------------------------------------------
log_enable = 0

;---------------------------------------------------------------------
;■ログ保存日数
;---------------------------------------------------------------------
log_save_days = 365

;---------------------------------------------------------------------
;■ログファイルの区切り文字
;---------------------------------------------------------------------
log_delimiter = 1

;---------------------------------------------------------------------
;■ログファイルの文字コード
;---------------------------------------------------------------------
log_charcode = 1

;---------------------------------------------------------------------
;■言語
;---------------------------------------------------------------------
lang = ja

;---------------------------------------------------------------------
;■サイトの文字エンコーディング
;---------------------------------------------------------------------
html_00_encoding = 0

;---------------------------------------------------------------------
;■サイトのドキュメントタイプ（DTD）
;---------------------------------------------------------------------
html_00_doctype = 0013

;---------------------------------------------------------------------
;■携帯端末の画面自動振り分け
;---------------------------------------------------------------------
html_mobi_selectable = 0

;---------------------------------------------------------------------
;■携帯キャリアごとの画面自動振り分け
;---------------------------------------------------------------------
html_mobi_carrier_selectable = 1

;---------------------------------------------------------------------
;■携帯端末用ドキュメントタイプ（DTD）と文字エンコーディング
;---------------------------------------------------------------------
;携帯端末共通
html_10_doctype = 1001
html_10_encoding = 1
;DoCoMo端末用
html_11_doctype = 1111
html_11_encoding = 1
;au端末用
html_12_doctype = 1210
html_12_encoding = 1
;Softbank端末用
html_13_doctype = 1310
html_13_encoding = 1

;---------------------------------------------------------------------
;■Content-Typeの自動認識
;---------------------------------------------------------------------
html_auto_ctype = 1

;---------------------------------------------------------------------
;■確認画面の表示
;---------------------------------------------------------------------
confirm_enable = 1

;---------------------------------------------------------------------
;■完了画面表示方法
;---------------------------------------------------------------------
thx_redirect_enable = 0

;---------------------------------------------------------------------
;■投稿メールサブジェクト
;---------------------------------------------------------------------
mai_subject = [%SERIAL%] 受付通知

;---------------------------------------------------------------------
;■自動返信メール送信フラグ
;---------------------------------------------------------------------
rpy_enable = 0

;---------------------------------------------------------------------
;■自動返信メールの重要度
;---------------------------------------------------------------------
rpy_priority = 3

;---------------------------------------------------------------------
;■自動返信メールの開封確認メッセージの要求
;---------------------------------------------------------------------
rpy_notification = 0

;---------------------------------------------------------------------
;■自動返信メールの添付ファイルの扱い
;---------------------------------------------------------------------
rpy_atc_reply = 0

;---------------------------------------------------------------------
;■添付ファイルの合計サイズ制限
;---------------------------------------------------------------------
atc_max_total_size = 10

;---------------------------------------------------------------------
;■添付ファイル画像の確認画面サムネイル表示
;---------------------------------------------------------------------
atc_thumb_show = 1
atc_thumb_module = auto
atc_thumb_format = gif

;---------------------------------------------------------------------
;■添付ファイル画像のサムネイルのサイズ
;---------------------------------------------------------------------
atc_thumb_w = 240
atc_thumb_h = 240

;---------------------------------------------------------------------
;■受付シリアル番号のフォーマット
;---------------------------------------------------------------------
seq_fmt = 1

;---------------------------------------------------------------------
;■受付シリアル番号のフォーマット雛形
;---------------------------------------------------------------------
seq_fmt_tpl = %SEQ%

;---------------------------------------------------------------------
;■ログダウンロードオプション
;---------------------------------------------------------------------
log_download_delimiter = 1
log_download_charcode = 2
log_download_rc = 3
log_download_rc_replace = 

;---------------------------------------------------------------------
;■自動返信メールに添付するファイルのトータルサイズ上限(MB)
;---------------------------------------------------------------------
rpy_atc_max_total_size = 10

